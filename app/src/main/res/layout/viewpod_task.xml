<?xml version="1.0" encoding="utf-8"?>

<com.mhst.custom_view_assignment.views.viewpod.ViewpodTask android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/margin_card_medium"
    android:layout_margin="@dimen/margin_medium"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tvProgressLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="In Progress"
            android:textColor="@android:color/holo_orange_dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvPageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="Contact Page"
            app:layout_constraintStart_toStartOf="@+id/tvProgressLabel"
            app:layout_constraintTop_toBottomOf="@+id/tvProgressLabel" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:text="#Design"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/tvPageName"
            app:layout_constraintTop_toBottomOf="@+id/tvPageName"
            app:srcCompat="@drawable/ic_baseline_message_24" />

        <TextView
            android:id="@+id/tvCommentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="4"
            app:layout_constraintBottom_toBottomOf="@+id/ivComment"
            app:layout_constraintStart_toEndOf="@+id/ivComment"
            app:layout_constraintTop_toTopOf="@+id/ivComment" />

        <ImageView
            android:id="@+id/ivFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvCommentCount"
            app:layout_constraintStart_toEndOf="@+id/tvCommentCount"
            app:layout_constraintTop_toTopOf="@+id/tvCommentCount"
            app:srcCompat="@drawable/ic_baseline_attach_file_24" />

        <TextView
            android:id="@+id/tvFileCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="6"
            app:layout_constraintBottom_toBottomOf="@+id/ivFile"
            app:layout_constraintStart_toEndOf="@+id/ivFile"
            app:layout_constraintTop_toTopOf="@+id/ivFile" />

        <com.mhst.custom_view_assignment.views.CircularImageView
            android:id="@+id/circularImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/tvPageName"
            app:layout_constraintVertical_bias="0.50"
            app:srcCompat="@drawable/funny_dazai" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="N 163"
            app:layout_constraintBottom_toBottomOf="@+id/tvFileCount"
            app:layout_constraintEnd_toStartOf="@+id/circularImageView"
            app:layout_constraintTop_toTopOf="@+id/circularImageView"
            app:layout_constraintVertical_bias="0.65" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.mhst.custom_view_assignment.views.viewpod.ViewpodTask>
